<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6f6f6f"
    tools:context=".MainScreen.ExerciseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        >

        <TextView
            android:id="@+id/day_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/andada"
            android:gravity="center"

            android:text="The Best Exercises for Calisthenics"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_workout"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:text="All body"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_workout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movement"
            android:layout_marginTop="96dp"


            android:fontFamily="@font/andada"
            android:text=" Full body warm up (45 sec in and 15 sec rest)\n\n Jumping jacks\n Mountain climers\n Push-ups\n Lunges\n Handstand or pike hold on the floor\n \n Full body calisthenics exercises:\n Biceps - Hefesto\n Back - L-sit Pull up\n Lati - Front Lever raises\n Chest - Explosive push ups\n Triceps - Advanced bench dips\n Shoulders - Handstand push ups\n Abdomen - Toes to bar\n Legs - Pistol squats"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.365"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movement" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

